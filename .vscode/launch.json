{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Firefox",
			"type": "firefox",
			"request": "launch",
			"url": "http://localhost:8000/",
			"webRoot": "${workspaceFolder}",
			"reAttach": true,
			"reloadOnChange": {
				"watch": [
					"${workspaceFolder}/**/*.js",
					"${workspaceFolder}/src/markdown-pages/**/*.md"
				],
				"ignore": "**/node_modules/**"
			}
		},
		{
			"name": "Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Edge",
			"request": "launch",
			"type": "pwa-msedge",
			"url": "http://localhost:8000",
			"webRoot": "${workspaceFolder}"
		}
	]
}
